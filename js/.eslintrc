{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "space-before-function-paren": [
      2,
      "never"
    ],
    "comma-dangle": [
      2,
      "never"
    ],
    "no-console": 0,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "max-len": [
      2,
      140,
      4
    ],
    "strict": [
      2,
      "global"
    ],
    "arrow-body-style": [
      0
    ]
  },
  "globals": {
    "process": true,
    "window": true
  }
}
